<?xml version="1.0"?>
<clickhouse>
    <!-- Reduce max memory usage to 2GB for efficient query processing -->
    <profiles>
        <default>
            <max_memory_usage>2000000000</max_memory_usage> <!-- 2GB per query -->
        </default>
    </profiles>
    
    <!-- User configuration to override default memory limits -->
    <users>
        <admin>
            <profile>default</profile>
            <max_memory_usage_for_user>2000000000</max_memory_usage_for_user> <!-- 2GB -->
        </admin>
        <default>
            <profile>default</profile>
            <max_memory_usage_for_user>2000000000</max_memory_usage_for_user> <!-- 2GB -->
        </default>
    </users>
</clickhouse>
