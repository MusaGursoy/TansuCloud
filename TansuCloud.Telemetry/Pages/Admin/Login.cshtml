@page
@using TansuCloud.Telemetry.Security
@model TansuCloud.Telemetry.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "Telemetry admin login";
}

<h1 class="mb-3">Telemetry admin login</h1>
<p class="text-muted">Enter the configured admin API key to access telemetry envelopes.</p>

@if (Model.ShowMissingKeyHint)
{
    <div class="alert alert-info" role="note">
        <p class="mb-1">
            The admin UI requires the bearer key configured in
            <code>TELEMETRY__ADMIN__APIKEY</code> (see <code>.env</code> or your secrets store).
        </p>
        <p class="mb-0">
            Tip: copy the API key value into the field below or visit
            <code>@(TelemetryAdminAuthenticationDefaults.LoginPath)?apiKey=&lt;value&gt;</code>
            to bootstrap a browser session.
        </p>
    </div>
}

<form method="post" class="mb-4" asp-antiforgery="true">
    <input type="hidden" asp-for="ReturnUrl" />
    <div class="mb-3">
        <label asp-for="ApiKey" class="form-label"></label>
        <input asp-for="ApiKey" class="form-control" autocomplete="off" autofocus />
        <span asp-validation-for="ApiKey" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
</form>

@if (User.Identity?.IsAuthenticated ?? false)
{
    <form method="post" asp-page-handler="Logout" asp-antiforgery="true" class="mt-3">
        <button type="submit" class="btn btn-outline-secondary">Sign out</button>
    </form>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
