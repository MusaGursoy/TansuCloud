{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Telemetry": {
      "Consumer": "Yarp.Telemetry.Consumption"
    },
    "HttpClient": {
      "DangerousAcceptAnyServerCertificate": true
    },
    "WebSockets": {
      "KeepAliveInterval": "00:00:10"
    }
  },
  "OpenTelemetry": {
    "Otlp": {
      "Endpoint": "http://localhost:4317"
    }
  },
  "Gateway": {
    "Cors": {
      "AllowedOrigins": ""
    },
    "OutputCache": {
      // Default TTL (seconds) for anonymous output cache base policy
      "DefaultTtlSeconds": 15,
      // TTL (seconds) for static asset policy "PublicStaticLong"
      "StaticTtlSeconds": 300
    },
    "RateLimits": {
      // Fixed window length in seconds; also used for Retry-After header
      "WindowSeconds": 10,
      "Defaults": {
        // Fallback permit/queue when no route-specific override exists
        "PermitLimit": 100,
        "QueueLimit": 100
      },
      // Per route family overrides (top-level path segment)
      "Routes": {
        "db": { "PermitLimit": 200 },
        "storage": { "PermitLimit": 150 },
        "identity": { "PermitLimit": 600, "QueueLimit": 0 },
        "dashboard": { "PermitLimit": 300 }
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://127.0.0.1:5080"
  }
    }
  }
}
