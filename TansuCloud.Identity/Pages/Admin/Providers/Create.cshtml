@page
@model TansuCloud.Identity.Pages.Admin.Providers.CreateModel
@{
    ViewData["Title"] = "Create External Provider";
}
<h2>Create External Provider</h2>
<form method="post">
    <div class="mb-2">
        <label class="form-label">TenantId</label>
        <input asp-for="Item.TenantId" class="form-control form-control-sm" />
    </div>
    <div class="mb-2">
        <label class="form-label">Provider</label>
        <input asp-for="Item.Provider" class="form-control form-control-sm" />
    </div>
    <div class="mb-2">
        <label class="form-label">Authority</label>
        <input asp-for="Item.Authority" class="form-control form-control-sm" />
    </div>
    <div class="mb-2">
        <label class="form-label">ClientId</label>
        <input asp-for="Item.ClientId" class="form-control form-control-sm" />
    </div>
    <div class="mb-2">
        <label class="form-label">ClientSecret</label>
        <input asp-for="Item.ClientSecret" class="form-control form-control-sm" />
    </div>
    <div class="mb-2">
        <label class="form-label">Scopes</label>
        <input asp-for="Item.Scopes" class="form-control form-control-sm" />
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="Item.Enabled">
        <label class="form-check-label">Enabled</label>
    </div>
    <button type="submit" class="btn btn-sm btn-primary">Create</button>
    <a asp-page="Index" class="btn btn-sm btn-secondary">Back</a>
</form>
