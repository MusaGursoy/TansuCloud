@* Required by Identity UI layout; minimal placeholder *@
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index")" method="post">
        <span class="navbar-text me-2">Hello @User.Identity?.Name</span>
        <button type="submit" class="btn btn-sm btn-outline-danger">Logout</button>
    </form>
}
else
{
    <a class="btn btn-sm btn-outline-primary" asp-area="Identity" asp-page="/Account/Login">Login</a>
}
