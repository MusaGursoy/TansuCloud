{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "PrometheusQuery": {
    "ApiBaseUrl": "http://127.0.0.1:9090/",
    "PrometheusUiBaseUrl": "http://127.0.0.1:9090/",
    "TimeoutSeconds": 30,
    "MaxRetries": 2,
    "EnableQueryAllowlist": true
  },
  "TempoQuery": {
    "ApiBaseUrl": "http://127.0.0.1:3200/",
    "TimeoutSeconds": 30,
    "MaxRetries": 2
  },
  "LokiQuery": {
    "ApiBaseUrl": "http://127.0.0.1:3100/",
    "TimeoutSeconds": 30,
    "MaxRetries": 2
  },
  "SigNozQuery": {
    "ApiBaseUrl": "http://127.0.0.1:3301/",
    "SigNozUiBaseUrl": "http://127.0.0.1:3301/"
  },
  "Oidc": {
    "AcceptAnyServerCert": true,
    "ClientId": "tansu-dashboard",
    "ClientSecret": "dev-secret"
  },
  "OpenTelemetry": {
    "Otlp": {
      "Endpoint": "http://127.0.0.1:4317",
      "Diagnostics": {
        "EnableGrpcActivityListener": true
      }
    }
  },
  "LoggingReport": {
    "Enabled": false,
    "MinimumLevel": "Warning",
    "MaxBufferEntries": 1000,
    "ReportInterval": "00:30:00"
  },
  "LogReporting": {
    "Enabled": false,
    "MainServerUrl": "",
    "ApiKey": "",
    "ReportIntervalMinutes": 60,
    "SeverityThreshold": "Warning",
    "QueryWindowMinutes": 60,
    "MaxItems": 2000,
    "HttpTimeoutSeconds": 30,
    "WarningSamplingPercent": 10,
    "AllowedWarningCategories": [
      "OIDC-",
      "Tansu.Gateway",
      "Tansu.Storage",
      "Tansu.Database",
      "Tansu.Identity"
    ],
    "HttpLatencyP95Ms": 500,
    "DbDurationP95Ms": 300,
    "ErrorRatePercent": 1,
    "PseudonymizeTenants": false,
    "TenantHashSecret": ""
  },
  "Audit": {
    "ConnectionString": "Host=localhost;Port=5432;Database=tansu_audit;Username=postgres;Password=postgres",
    "Table": "audit_events",
    "ChannelCapacity": 20000,
    "FullDropEnabled": true,
    "MaxDetailsBytes": 16384
  }
}
