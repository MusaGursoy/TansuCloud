@inherits LayoutComponentBase
@inject NavigationManager Navigation

<MudLayout>
    <!-- App Bar (Top Navigation) -->
    <MudAppBar Elevation="1" Dense="false">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudText Typo="Typo.h5" Class="ml-3">TansuCloud</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" />
        <MudMenu Icon="@Icons.Material.Filled.AccountCircle" Color="Color.Inherit" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
            <MudMenuItem Icon="@Icons.Material.Filled.Person">Profile</MudMenuItem>
            <MudMenuItem Icon="@Icons.Material.Filled.Settings">Settings</MudMenuItem>
            <MudDivider />
            <MudMenuItem Icon="@Icons.Material.Filled.Logout">Logout</MudMenuItem>
        </MudMenu>
    </MudAppBar>

    <!-- Sidebar Drawer (Left Navigation) -->
    <MudDrawer @bind-Open="@_drawerOpen" Elevation="2" Variant="@DrawerVariant.Mini" OpenMiniOnHover="true" Width="240px" MiniWidth="64px" ClipMode="DrawerClipMode.Always">
        <MudDrawerHeader Class="d-flex align-center justify-center pa-4">
            <MudIcon Icon="@Icons.Material.Filled.Cloud" Color="Color.Primary" Size="Size.Large" />
        </MudDrawerHeader>
        <MudNavMenu>
            <!-- Dashboard -->
            <MudNavGroup Title="Dashboard" Icon="@Icons.Material.Filled.Dashboard" Expanded="true">
                <MudNavLink Href="/dashboard" Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.Home">Overview</MudNavLink>
            </MudNavGroup>

            <!-- Networking -->
            <MudNavGroup Title="Networking" Icon="@Icons.Material.Filled.NetworkCheck">
                <MudNavLink Href="/dashboard/admin/domains" Icon="@Icons.Material.Filled.Domain">Domains/TLS</MudNavLink>
                <MudNavLink Href="/dashboard/admin/policies" Icon="@Icons.Material.Filled.Policy">IP Policies</MudNavLink>
            </MudNavGroup>

            <!-- Routing -->
            <MudNavGroup Title="Routing" Icon="@Icons.Material.Filled.Route">
                <MudNavLink Href="/dashboard/admin/routes" Icon="@Icons.Material.Filled.AltRoute">YARP Routes</MudNavLink>
                <MudNavLink Href="/dashboard/admin/health" Icon="@Icons.Material.Filled.HealthAndSafety">Health Probes</MudNavLink>
            </MudNavGroup>

            <!-- Caching -->
            <MudNavGroup Title="Caching" Icon="@Icons.Material.Filled.Storage">
                <MudNavLink Href="/dashboard/admin/output-cache" Icon="@Icons.Material.Filled.Cached">Output Cache</MudNavLink>
                <MudNavLink Href="/dashboard/admin/rate-limits" Icon="@Icons.Material.Filled.Speed">Rate Limits</MudNavLink>
            </MudNavGroup>

            <!-- Identity -->
            <MudNavGroup Title="Identity" Icon="@Icons.Material.Filled.People">
                <MudNavLink Href="/dashboard/admin/users" Icon="@Icons.Material.Filled.Person">Users & Roles</MudNavLink>
                <MudNavLink Href="/dashboard/admin/identity-policies" Icon="@Icons.Material.Filled.Password">Identity Policies</MudNavLink>
                <MudNavLink Href="/dashboard/admin/tokens" Icon="@Icons.Material.Filled.Token">Token Settings</MudNavLink>
            </MudNavGroup>

            <!-- Storage & Database -->
            <MudNavGroup Title="Storage & Database" Icon="@Icons.Material.Filled.Storage">
                <MudNavLink Href="/dashboard/admin/storage" Icon="@Icons.Material.Filled.Folder">Buckets & Collections</MudNavLink>
                <MudNavLink Href="/dashboard/admin/quotas" Icon="@Icons.Material.Filled.DataUsage">Quotas & Lifecycle</MudNavLink>
                <MudNavLink Href="/dashboard/admin/vectors" Icon="@Icons.Material.Filled.Hub">Vector Settings</MudNavLink>
            </MudNavGroup>

            <!-- Observability -->
            <MudNavGroup Title="Observability" Icon="@Icons.Material.Filled.Visibility">
                <MudNavLink Href="/dashboard/admin/metrics" Icon="@Icons.Material.Filled.ShowChart">Metrics Dashboard</MudNavLink>
                <MudNavLink Href="/dashboard/admin/observability/traces" Icon="@Icons.Material.Filled.Route" data-testid="nav-traces">Traces</MudNavLink>
                <MudNavLink Href="/dashboard/admin/observability/logs" Icon="@Icons.Material.Filled.Description" data-testid="nav-logs">Logs</MudNavLink>
                <MudNavLink Href="/dashboard/admin/observability/config" Icon="@Icons.Material.Filled.Settings">Configuration</MudNavLink>
            </MudNavGroup>

            <!-- Policy Center -->
            <MudNavGroup Title="Policy Center" Icon="@Icons.Material.Filled.Security">
                <MudNavLink Href="/dashboard/admin/policy-list" Icon="@Icons.Material.Filled.ListAlt">Policy List</MudNavLink>
                <MudNavLink Href="/dashboard/admin/enforcement" Icon="@Icons.Material.Filled.Gavel">Enforcement Modes</MudNavLink>
                <MudNavLink Href="/dashboard/admin/simulators" Icon="@Icons.Material.Filled.Science">Simulators</MudNavLink>
            </MudNavGroup>

            <!-- Tenants -->
            <MudNavGroup Title="Tenants" Icon="@Icons.Material.Filled.Business">
                <MudNavLink Href="/dashboard/admin/tenants" Icon="@Icons.Material.Filled.Apartment">Tenant List</MudNavLink>
                <MudNavLink Href="/dashboard/admin/provisioning" Icon="@Icons.Material.Filled.AddBusiness">Provisioning</MudNavLink>
            </MudNavGroup>

            <!-- Settings -->
            <MudNavGroup Title="Settings" Icon="@Icons.Material.Filled.Settings">
                <MudNavLink Href="/dashboard/admin/profile" Icon="@Icons.Material.Filled.AccountCircle">Profile</MudNavLink>
                <MudNavLink Href="/dashboard/admin/preferences" Icon="@Icons.Material.Filled.Tune">Preferences</MudNavLink>
                <MudNavLink Href="/dashboard/admin/providers" Icon="@Icons.Material.Filled.Extension">Providers</MudNavLink>
                <MudNavLink Href="/dashboard/admin/audit" Icon="@Icons.Material.Filled.History">Audit Log</MudNavLink>
            </MudNavGroup>
        </MudNavMenu>
    </MudDrawer>

    <!-- Main Content -->
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.False" Class="pa-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

<!-- Blazor Error UI -->
<div id="blazor-error-ui" data-nosnippet>
    <MudAlert Severity="Severity.Error" Variant="Variant.Filled">
        An unhandled error has occurred.
        <MudButton Color="Color.Error" Variant="Variant.Text" Href="" Class="ml-2">Reload</MudButton>
        <MudIconButton Icon="@Icons.Material.Filled.Close" Color="Color.Inherit" Size="Size.Small" OnClick="@(() => { })" Class="ml-2" />
    </MudAlert>
</div>

@code {
    private bool _drawerOpen = true;

    private void ToggleDrawer()
    {
        _drawerOpen = !_drawerOpen;
    }
} // End of Code AdminLayout
