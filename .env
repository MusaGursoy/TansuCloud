# Dev defaults; override in CI/prod as needed
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# PgCat admin (dev-only)
PGCAT_ADMIN_USER=admin
PGCAT_ADMIN_PASSWORD=admin

# Dashboard OIDC confidential client secret (dev-only)
DASHBOARD_CLIENT_SECRET=dev-secret

# Public base URL used for browser-visible links and OIDC discovery
PUBLIC_BASE_URL=http://127.0.0.1:8080

# HTTPS certificate password (Option A: .env). Only used if HTTPS is enabled on gateway
# See Guide-For-Admins-and-Tenants section 5.3 (Option A)
GATEWAY_CERT_PASSWORD=changeit
